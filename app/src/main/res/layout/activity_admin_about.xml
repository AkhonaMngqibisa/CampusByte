<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAbout"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/adriana_chionetti_rhkgssfniji_unsplash"
    >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="134dp"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/logooftheapp"
            app:srcCompat="@drawable/campusbyte" />
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavigationView"
        app:headerLayout="@layout/header"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:background="@color/white"
        app:itemTextColor="@color/gray"
        app:itemIconTint="@color/gray"
        app:menu="@menu/menu"
        android:layout_gravity="start">

</com.google.android.material.navigation.NavigationView>

    <TextView
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="130dp"
        android:text="@string/campus_bytes"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="130dp" />
    <TextView
        android:id="@+id/Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="30dp"
        android:text="@string/mobile_developer_district_six"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/search"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="390dp"
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:hint="@string/search"
        android:inputType="textEmailAddress"
        android:textColorHint="#B3FFFFFF"
        android:drawableRight="@drawable/search"

        android:autofillHints=""
        android:drawableEnd="@drawable/search" />



    </androidx.drawerlayout.widget.DrawerLayout>