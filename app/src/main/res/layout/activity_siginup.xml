<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="844dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:background="#1D393E"
        android:orientation="vertical"

        >


        <ImageView
            android:id="@+id/Logo"
            android:layout_width="196dp"
            android:layout_height="193dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/campusbyte" />

        <EditText
            android:id="@+id/et-Name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout"
            android:drawablePadding="10dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et-Username"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et-Email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/et-password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et-repassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout"
            android:drawablePadding="10dp"
            android:hint="Re-Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@android:color/background_dark"
            android:textSize="14sp" />


        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonlayout"
            android:text="Sign up"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>